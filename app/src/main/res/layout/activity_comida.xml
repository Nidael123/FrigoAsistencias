<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_3"
    tools:context=".Comida">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:fontFamily="@font/fuentes"
                android:text="HORA DE COMER"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <SearchView
                android:id="@+id/search_c_buscar"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@drawable/barra" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_comida"
                android:layout_width="match_parent"
                android:layout_height="359dp" />

            <Button
                android:id="@+id/btn_c_regresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuentes"
                android:text="REGRESAR DE COMER" />

            <Button
                android:id="@+id/btn_c_manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuentes"
                android:text="INGRESAR MANUAL" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>