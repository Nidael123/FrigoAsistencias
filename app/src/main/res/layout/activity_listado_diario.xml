<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_3"
    tools:context=".ListadoDiario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_fechadiaria"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/fuentes"
                    android:paddingTop="10dp"
                    android:text="FECHA"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_l_total"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/fuentes"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

            </LinearLayout>

            <EditText
                android:id="@+id/edit_l_ingresos"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:fontFamily="@font/fuentes"
                android:ems="10"
                android:inputType="textPersonName" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/list_diaria"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:divider="@color/purple_500" />
                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/btn_a_regresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuentes"
                android:text="REGRESAR DE BAÃ‘O" />

            <Button
                android:id="@+id/btn_a_manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuentes"
                android:text="Ingreso manual" />

            <Button
                android:id="@+id/btn_a_comer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuentes"
                android:text="SALIR A COMER" />

            <Button
                android:id="@+id/btn_a_falta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuentes"
                android:enabled="true"
                android:text="ASISTENCIA" />

            <Button
                android:id="@+id/btn_a_salir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuentes"
                android:enabled="true"
                android:text="SALIDA" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>