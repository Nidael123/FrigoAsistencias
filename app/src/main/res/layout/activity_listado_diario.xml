<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListadoDiario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_fechadiaria"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="FECHA"
                    android:textAlignment="center"
                    android:textColor="@color/purple_700" />

                <TextView
                    android:id="@+id/txt_l_total"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/purple_700" />

            </LinearLayout>

            <ListView
                android:id="@+id/list_diaria"
                android:layout_width="match_parent"
                android:layout_height="583dp" />

            <Button
                android:id="@+id/btn_a_regresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGRESAR DE BAÃ‘O" />

            <Button
                android:id="@+id/btn_a_comer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SALIR A COMER" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>